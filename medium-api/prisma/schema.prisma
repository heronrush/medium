generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String   @id @default(uuid())
  fullname String
  email    String   @unique
  password String
  blogs    Blog[]
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  content   String
  published Boolean  @default(false)
  author    Users     @relation(fields: [authorId], references: [id])
  authorId  String
}